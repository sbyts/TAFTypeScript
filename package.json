  "dependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.44.0",
    "allure-playwright": "^2.15.1",
    "npm": "^10.7.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "axios": "^1.7.2"
  }
